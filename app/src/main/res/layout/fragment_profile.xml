<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppParentLayout"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                style="@style/TextHead"
                android:fontFamily="@font/roboto_bold"
                android:text="Profile"
                android:textColor="@color/googleDark" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/default_user" />

            <TextView
                style="@style/TextTitle"
                android:fontFamily="@font/roboto_medium"
                android:text="Ujang Mamang Prasetiyo"
                android:textColor="@color/googleDark" />

            <TextView
                style="@style/TextMd"
                android:fontFamily="@font/roboto_medium"
                android:text="1718112243"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_small_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_small_margin">


            <ImageView
                android:id="@+id/ic_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_person_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_user"
                android:layout_alignBottom="@id/ic_user"
                android:layout_marginStart="@dimen/activity_small_margin"
                android:layout_toEndOf="@id/ic_user"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_name"
                    style="@style/TextMd"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Name"
                    android:textColor="@color/googleDark" />

                <TextView
                    android:id="@+id/tv_subtitle_name"
                    style="@style/TextSm"
                    android:text="Ujang Mamang Prasetiyo" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/ic_user"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_email_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_email"
                android:layout_alignBottom="@id/ic_email"
                android:layout_marginStart="@dimen/activity_small_margin"
                android:layout_toEndOf="@id/ic_email"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_email"
                    style="@style/TextMd"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Email"
                    android:textColor="@color/googleDark" />

                <TextView
                    android:id="@+id/tv_subtitle_email"
                    style="@style/TextSm"
                    android:text="ujangmamang@gmail.com" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ic_history"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/ic_email"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_history_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_history"
                android:layout_alignBottom="@id/ic_history"
                android:layout_marginStart="@dimen/activity_small_margin"
                android:layout_toEndOf="@id/ic_email"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_password"
                    style="@style/TextMd"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Reset password"
                    android:textColor="@color/googleDark" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ic_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/ic_history"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_power_settings_new_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_logout"
                android:layout_alignBottom="@id/ic_logout"
                android:layout_marginStart="@dimen/activity_small_margin"
                android:layout_toEndOf="@id/ic_email"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_logout"
                    style="@style/TextMd"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Log out"
                    android:textColor="@color/googleRed" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>